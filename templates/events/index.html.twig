{% extends 'base.html.twig' %}

{% block title %}Hello NewsController!{% endblock %}

{% block body %}
<div class="container">
  <div class="row">
    {% for events in events %}
      <div class="col-md-12 mx-auto">
        <div class="card mb-4">
          <img src="/images/{{ events.cover }}" class="card-img-top" alt="News Image">
          <div class="card-body">
            <h5 class="card-title">{{ events.getTitre() }}</h5>
            <p class="card-text">{{ events.getDescription()|striptags|slice(0, 100) ~ '...'|raw  }}</p>
            <div class="bout">
              <a href="{{ path('app_events_show', { 'slug': events.getSlug() }) }}" class="bouton-voir">Voir l'actualit√©</a>
            </div>
          </div>
        </div>
      </div>
    {% endfor %}
    <div class="pagination">
    {{ knp_pagination_render(events) }}
</div>
  </div>
</div>
{% endblock %}

