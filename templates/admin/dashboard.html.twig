{% extends '@EasyAdmin/page/content.html.twig' %}

{% block head_stylesheets %}
    {{ parent() }}
    <style>
        .statistics {
            margin-top: 1rem;
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 1rem;
        }

        .card-dashboard {
            box-shadow: 0 0.46875rem 2.1875rem rgb(8 10 37 / 5%), 0 0.9375rem 1.40625rem rgb(8 10 37 / 5%), 0 0.25rem 0.53125rem rgb(8 10 37 / 7%), 0 0.125rem 0.1875rem rgb(8 10 37 / 5%);
            transition: transform .3s ease,box-shadow .3s ease;
        }

        .card-dashboard:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 20px -10px rgb(8 10 37 / 28%), 0 4px 20px 0 rgb(8 10 37 / 12%), 0 7px 8px -5px rgb(8 10 37 / 20%);
        }

        .card-dashboard-header {
            background-color: #003049;
            color: white;
            font-size: 1.2rem;
            padding: 0.75rem 1.25rem;
            border-bottom: none;
        }

        .card-dashboard-body {
            padding: 1.25rem;
            background-color: white;
            color: #333;
        }

        .card-dashboard-text {
            margin-bottom: 0.5rem;
            font-size: 1rem;
        }
    </style>
{% endblock %}

{% block title %}Dashboard{% endblock %}

{% block content %}
    <div class="content">
        <h1 class="text-center my-4">Statistiques</h1>

        <div class="statistics">
            <!-- User Card -->
            <div class="card-dashboard">
                <div class="card-dashboard-header">
                    Utilisateurs
                </div>
                <div class="card-dashboard-body">
                    <p class="card-dashboard-text">Nombre d'utilisateurs: {{ totalUsers }}</p>
                </div>
            </div>

            <!-- News Card -->
            <div class="card-dashboard">
                <div class="card-dashboard-header">
                    Actualités
                </div>
                <div class="card-dashboard-body">
                    <p class="card-dashboard-text">Nombre d'actualités: {{ totalNews }}</p>
                </div>
            </div>

            <!-- Visits Card -->
            <div class="card-dashboard">
                <div class="card-dashboard-header">
                    Visites
                </div>
                <div class="card-dashboard-body">
                    <p class="card-dashboard-text">Visiteurs uniques: {{ totalUniqueVisitors }}</p>
                </div>
            </div>
            <!-- Events Card -->
            <div class="card-dashboard">
                <div class="card-dashboard-header">
                    Événements
                </div>
                <div class="card-dashboard-body">
                    <p class="card-dashboard-text">Nombre d'événements: {{ totalEvents }}</p>
                </div>
            </div>
                {# {% for totalEvent in totalEvents %}

                <div>
                totalEvent: {{ totalEvent.getTotalReservedPlaces }}
                </div> 
                {% endfor %} #}

            <!-- reservations Card -->
            <div class="card-dashboard">
                <div class="card-dashboard-header">
                    Réservations
                </div>
                <div class="card-dashboard-body">
                 {% for eventReservation in eventReservations %}
                    <p class="card-dashboard-text">{{ eventReservation.titre }}: {{ eventReservation.getTotalReservedPlaces }}</p>
                {% else %}
                <p>Pas de réservations</p>
                </div>
                
                {% endfor %}
                </div>
                

        </div>

        {{ parent() }}
    </div>
{% endblock %}
