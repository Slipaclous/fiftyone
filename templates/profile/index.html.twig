{% extends 'base.html.twig' %}

{% block title %}Page de {{ user.email }}{% endblock %}

{% block body %}
    <div class="container full">
        <div class="row align-items-center">
            <div class="col-3 text-center">
                {% if user.avatar %}
                    <img src="{{user.avatar}}" height="300" width='300'  alt="Avatar de {{user.email}}" class="avatar mb-3">
                {% else %}
                    <img src="https://picsum.photos/300/300" alt="Avatar de {{user.email}}" class="avatar mb-3">     
                {% endif %}
                
            </div>
            <div class="col-9">
                <h1>{{user.email}}</h1>
                {% if user is same as (app.user) %}
                <div class="mt-3">
                     <a href="{{path('edit')}}" class="btn btn-primary mb-2">Modifier mes informations</a>
                        <a href="{{path('change_password')}}" class="btn btn-warning mb-2">Modifier mon mot de passe</a>
                        <a href="{{path('account_modifimg')}}" class="btn btn-primary mb-2">Modifier mon avatar</a>>
                    </div>
                {% endif %}
            </div>
        </div>
        <div class="col-12 my-5">
            {{user.informations | raw | nl2br }}
        </div>
        <hr>
        
    </div>
{% endblock %}